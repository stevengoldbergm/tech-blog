<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="card">
  <div class="card-header bg-secondary">
    <h6 class="pl-2 text-light">New Blog Post:</h6>
  </div>
  
  <form class="new-post-form">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-sm-12">
          <input type="title" class="form-control" id="post-title" placeholder="Post Title">
        </div>
      </div>

      <div class="form-group">
        <label for="FormControlTextarea1"></label>
        <textarea class="form-control" id="post-text" rows="3" placeholder="Post Text"></textarea>
      </div>
      <button type="submit" class="btn btn-secondary">Submit Post!</button>
    </form>
  </div>
</div>  
<br>

{{#if posts.length}}

<div class="card">
  <div class="card-header bg-secondary">
    <h6 class="pl-2 text-light">Post History:</h6>
  </div>
  <table class="table">
    <thead>
      <tr class="d-flex">
        <th scope="col" class="col-8">Title</th>
        <th scope="col" class="col-2">Edit</th>
        <th scope="col" class="col-2">Delete</th>
      </tr>
    </thead>
    <tbody>
      {{!-- For Each --}}
      {{#each posts as |post|}}
      <tr class="d-flex post-list">
        <td class="col-8">
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </td>
        <td class="col-2">
          <button class="btn btn-sm btn-info" data-id="{{post.id}}">Edit</button>
        </td>
        <td class="col-2">
          <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
        </td>
      </tr>
      {{!-- /each --}}
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

