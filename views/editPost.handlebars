<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{text}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

  <div class="col-md-12">
    <h3>Edit Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-text">Text:</label>
        <textarea class="form-input" id="post-text" name="post-text">{{text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Update!</button>
      </div>
    </form>
    <hr class="m-5">
  </div>

  

  </div>
</div>
