<div class="row">
  <div class="col-auto">
    <h2>Edit this post?</h2>
  </div>
</div>
<br>

<div class="card">
  <div class="card-header bg-secondary">
    <h6 class="pl-2 text-light">{{ user.name }} posted on {{ format_date date_created }}</h6>
  </div>
  
  <form class="new-post-form">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-sm-12">
          <input type="title" class="form-control" id="post-title" placeholder="{{ title }}">
        </div>
      </div>

      <div class="form-group">
        <label for="FormControlTextarea1"></label>
        <textarea class="form-control" id="post-text" rows="3" placeholder="{{ text }}"></textarea>
      </div>
      <button type="submit" class="btn btn-secondary">Edit Post!</button>
    </form>
  </div>
</div>  

<script src="/js/editPost.js"></script>

