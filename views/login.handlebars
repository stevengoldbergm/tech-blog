<form class="login-form">
   <h3>
      Log In:
    </h3>
    <hr>
  <div class="form-row">
   
    <div class="form-group col-md-6">
      <label for="email-login">Email</label>
      <input type="email" class="form-control" id="email-login" placeholder="Email">
    </div>
    <div class="form-group col-md-6">
      <label for="password-login">Password</label>
      <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-secondary col-12">Log In!</button>
  </div>

</form>

<br>
<br>

<form class="signup-form">
   <h3>
      Sign Up:
    </h3>
    <hr>
  <div class="form-row">
   
    <div class="form-group col-md-4">
      <label for="name-signup">User Name</label>
      <input type="name" class="form-control" id="name-signup" placeholder="User Name">
    </div>
    <div class="form-group col-md-4">
      <label for="email-signup">Email</label>
      <input type="email" class="form-control" id="email-signup" placeholder="Email">
    </div>
    <div class="form-group col-md-4">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-secondary col-12">Sign Up!</button>
  </div>
    
</form>

<script src="/js/login.js"></script>

